    // Class untuk pencarian berdasarkan harga menggunakan linear search
    class PesananHarga {
    private:
        DataMakanan daftarMakanan[18];
        int jumlahMakanan;
        Menutoko menu;
        
    public:
        PesananHarga() {
            jumlahMakanan = 18;
            // Inisialisasi data makanan sama seperti sebelumnya
            daftarMakanan[0] = {"Ayam Geprek", 18000, "Ayam", "Ayam Geprek Bangjo"};
            
        }

        void cariMakananByHarga() {
            int hargaMin, hargaMax;
            cout << "\n=== Pencarian Makanan Berdasarkan Harga (Linear Search) ===\n";
            cout << "Masukkan harga minimum: Rp ";
            cin >> hargaMin;
            cout << "Masukkan harga maksimum: Rp ";
            cin >> hargaMax;
            
            DataMakanan hasil[18];
            int jumlahHasil = 0;
            
            for (int i = 0; i < jumlahMakanan; i++) {
                if (daftarMakanan[i].harga >= hargaMin && daftarMakanan[i].harga <= hargaMax) {
                    hasil[jumlahHasil] = daftarMakanan[i];
                    jumlahHasil++;
                }
            }
            
            if (jumlahHasil > 0) {
                cout << "\n=== Makanan dengan Harga Rp " << hargaMin << " - Rp " << hargaMax << " ===\n";
                for (int i = 0; i < jumlahHasil; i++) {
                    cout << i + 1 << ". " << hasil[i].nama 
                        << " - Rp " << hasil[i].harga 
                        << " (" << hasil[i].restoran << ")" << endl;
                }
                
                // Tambahkan pemesanan
                cout << "\n=== Pemesanan ===\n";
                do {
                    int pilihMenu;
                    cout << "Pilih menu (masukkan nomor): ";
                    cin >> pilihMenu;
                    
                    if (pilihMenu >= 1 && pilihMenu <= jumlahHasil) {
                        menu.pesanan[menu.jumlahpesanan] = hasil[pilihMenu - 1].nama;
                        menu.harga[menu.jumlahpesanan] = hasil[pilihMenu - 1].harga;
                        cout << hasil[pilihMenu - 1].nama << " ditambahkan ke pesanan.\n";
                        menu.jumlahpesanan++;
                    } else {
                        cout << "Pilihan tidak valid.\n";
                    }
                    
                    cout << "Ingin menambah menu lagi? (y/n): ";
                    cin >> menu.lagi;
                } while(menu.lagi == 'y' || menu.lagi == 'Y');
                
                tampilkanRingkasanPesanan();
            } else {
                cout << "Tidak ada makanan dalam range harga tersebut.\n";
            }
        }
        
        void tampilkanRingkasanPesanan() {
            int total = 0;
            cout << "\n=== Pesanan Anda ===\n";
            for(int i = 0; i < menu.jumlahpesanan; i++){
                cout << i + 1 << ". " << menu.pesanan[i] << " - Rp " << menu.harga[i] << endl;
                total += menu.harga[i];
            }
            cout << "Total harga: Rp " << total << endl;
        }
        //total harga berdasarkan harga
        int gettotalharga2() {
    int total = 0;
    for (int i = 0; i < menu.jumlahpesanan; i++) {
        total += menu.harga[i];
    }
    return total;
}

    };


    // Class untuk pencarian berdasarkan jenis makanan menggunakan linear search
    class PesananJenis {
    private:
        DataMakanan daftarMakanan[18];
        int jumlahMakanan;
        Menutoko menu;
        
    public:
        PesananJenis() {
            jumlahMakanan = 18;
            // Inisialisasi data makanan lengkap (sama seperti PesananHarga)
            daftarMakanan[0] = {"Ayam Geprek", 18000, "Ayam", "Ayam Geprek Bangjo"};
            daftarMakanan[1] = {"Ayam Geprek Keju", 22000, "Ayam", "Ayam Geprek Bangjo"};
            daftarMakanan[2] = {"Ayam Geprek Sambel Korek", 19000, "Ayam", "Ayam Geprek Sambal Korek"};
            daftarMakanan[3] = {"Ayam Geprek Original", 17000, "Ayam", "Ayam Geprek Sambal Korek"};
            daftarMakanan[4] = {"Martabak Manis", 25000, "Martabak", "Martabak Legend"};
            daftarMakanan[5] = {"Martabak Telur", 30000, "Martabak", "Martabak Legend"};
            daftarMakanan[6] = {"Martabak Cokelat Keju", 26000, "Martabak", "Martabak Bangka 77"};
            daftarMakanan[7] = {"Martabak Telur Spesial", 32000, "Martabak", "Martabak Bangka 77"};
            daftarMakanan[8] = {"Bakso Urat", 25000, "Bakso", "Bakso Pak Kumis"};
            daftarMakanan[9] = {"Mie Ayam", 20000, "Bakso", "Bakso Pak Kumis"};
            daftarMakanan[10] = {"Bakso Beranak", 28000, "Bakso", "Bakso Beranak Jaya"};
            daftarMakanan[11] = {"Bakso Mercon", 25000, "Bakso", "Bakso Beranak Jaya"};
            daftarMakanan[12] = {"Mie Hompimpa", 17000, "Mie", "Mie Gacoan"};
            daftarMakanan[13] = {"Mie Suit", 17000, "Mie", "Mie Gacoan"};
            daftarMakanan[14] = {"Mie Badai Level 3", 18000, "Mie", "Mie Pedas Badai"};
            daftarMakanan[15] = {"Mie Goreng Pedas", 16000, "Mie", "Mie Pedas Badai"};
            daftarMakanan[16] = {"Bebek Goreng Original", 30000, "Bebek", "Bebek Goreng Haji Slamet"};
            daftarMakanan[17] = {"Bebek Bakar", 32000, "Bebek", "Bebek Goreng Haji Slamet"};
        }

        void cariMakananByJenis() {
            string jenisTarget;
            cout << "\n=== Pencarian Makanan Berdasarkan Jenis (Linear Search) ===\n";
            cout << "Jenis makanan tersedia: Ayam, Martabak, Bakso, Mie, Bebek\n";
            cout << "Masukkan jenis makanan: ";
            cin >> jenisTarget;
            
            DataMakanan hasil[18];
            int jumlahHasil = 0;
            
            for (int i = 0; i < jumlahMakanan; i++) {
                if (daftarMakanan[i].jenis == jenisTarget) {
                    hasil[jumlahHasil] = daftarMakanan[i];
                    jumlahHasil++;
                }
            }
            
            if (jumlahHasil > 0) {
                cout << "\n=== Makanan Jenis " << jenisTarget << " ===\n";
                for (int i = 0; i < jumlahHasil; i++) {
                    cout << i + 1 << ". " << hasil[i].nama 
                        << " - Rp " << hasil[i].harga 
                        << " (" << hasil[i].restoran << ")" << endl;
                }
                
                cout << "\n=== Pemesanan ===\n";
                do {
                    int pilihMenu;
                    cout << "Pilih menu (masukkan nomor): ";
                    cin >> pilihMenu;
                    
                    if (pilihMenu >= 1 && pilihMenu <= jumlahHasil) {
                        menu.pesanan[menu.jumlahpesanan] = hasil[pilihMenu - 1].nama;
                        menu.harga[menu.jumlahpesanan] = hasil[pilihMenu - 1].harga;
                        cout << hasil[pilihMenu - 1].nama << " ditambahkan ke pesanan.\n";
                        menu.jumlahpesanan++;
                    } else {
                        cout << "Pilihan tidak valid.\n";
                    }
                    
                    cout << "Ingin menambah menu lagi? (y/n): ";
                    cin >> menu.lagi;
                } while(menu.lagi == 'y' || menu.lagi == 'Y');
                
                tampilkanRingkasanPesanan();
            } else {
                cout << "Tidak ada makanan dengan jenis " << jenisTarget << ".\n";
            }
        }
        
        void tampilkanRingkasanPesanan() {
            int total = 0;
            cout << "\n=== Pesanan Anda ===\n";
            for(int i = 0; i < menu.jumlahpesanan; i++){
                cout << i + 1 << ". " << menu.pesanan[i] << " - Rp " << menu.harga[i] << endl;
                total += menu.harga[i];
            }
            cout << "Total harga: Rp " << total << endl;
        }
        //total harga berdasarkan jenis
       int gettotalharga3() {
    int total = 0;
    for (int i = 0; i < menu.jumlahpesanan; i++) {
        total += menu.harga[i];
    }
    return total;
}

    };

    //Class untuk Bubble Sort mengurutkan makanan berdasarkan Huruf
    class SortNamaMenu {
    private:
        Menutoko menu;
        
    public:
        // Fungsi sorting yang sudah ada tetap sama
        void bubbleSortNamaAscending(DataMakanan arr[], int n) {
            for (int i = 0; i < n - 1; i++) {
                for (int j = 0; j < n - i - 1; j++) {
                    if (arr[j].nama > arr[j + 1].nama) {
                        DataMakanan temp = arr[j];
                        arr[j] = arr[j + 1];
                        arr[j + 1] = temp;
                    }
                }
            }
        }
        
        void bubbleSortNamaDescending(DataMakanan arr[], int n) {
            for (int i = 0; i < n - 1; i++) {
                for (int j = 0; j < n - i - 1; j++) {
                    if (arr[j].nama < arr[j + 1].nama) {
                        DataMakanan temp = arr[j];
                        arr[j] = arr[j + 1];
                        arr[j + 1] = temp;
                    }
                }
            }
        }

        void urutkanMenuBerdasarkanNama() {
            DataMakanan daftarMakanan[18] = {
                {"Ayam Geprek", 18000, "Ayam", "Ayam Geprek Bangjo"},
                {"Ayam Geprek Keju", 22000, "Ayam", "Ayam Geprek Bangjo"},
                {"Ayam Geprek Sambel Korek", 19000, "Ayam", "Ayam Geprek Sambal Korek"},
                {"Ayam Geprek Original", 17000, "Ayam", "Ayam Geprek Sambal Korek"},
                {"Martabak Manis", 25000, "Martabak", "Martabak Legend"},
                {"Martabak Telur", 30000, "Martabak", "Martabak Legend"},
                {"Martabak Cokelat Keju", 26000, "Martabak", "Martabak Bangka 77"},
                {"Martabak Telur Spesial", 32000, "Martabak", "Martabak Bangka 77"},
                {"Bakso Urat", 25000, "Bakso", "Bakso Pak Kumis"},
                {"Mie Ayam", 20000, "Bakso", "Bakso Pak Kumis"},
                {"Bakso Beranak", 28000, "Bakso", "Bakso Beranak Jaya"},
                {"Bakso Mercon", 25000, "Bakso", "Bakso Beranak Jaya"},
                {"Mie Hompimpa", 17000, "Mie", "Mie Gacoan"},
                {"Mie Suit", 17000, "Mie", "Mie Gacoan"},
                {"Mie Badai Level 3", 18000, "Mie", "Mie Pedas Badai"},
                {"Mie Goreng Pedas", 16000, "Mie", "Mie Pedas Badai"},
                {"Bebek Goreng Original", 30000, "Bebek", "Bebek Goreng Haji Slamet"},
                {"Bebek Bakar", 32000, "Bebek", "Bebek Goreng Haji Slamet"}
            };
            int jumlahMakanan = 18;

            int pilihanUrut;
            cout << "\n=== Urutkan Menu Berdasarkan Nama ===\n";
            cout << "1. A-Z (Ascending)\n";
            cout << "2. Z-A (Descending)\n";
            cout << "Pilih urutan (1/2): ";
            cin >> pilihanUrut;

            if (pilihanUrut == 1) {
                bubbleSortNamaAscending(daftarMakanan, jumlahMakanan);
                cout << "\nMenu diurutkan dari A ke Z:\n";
            } else if (pilihanUrut == 2) {
                bubbleSortNamaDescending(daftarMakanan, jumlahMakanan);
                cout << "\nMenu diurutkan dari Z ke A:\n";
            } else {
                cout << "Pilihan tidak valid.\n";
                return;
            }

            // Tampilkan menu yang sudah diurutkan
            for (int i = 0; i < jumlahMakanan; i++) {
                cout << i + 1 << ". " << daftarMakanan[i].nama
                    << " - Rp " << daftarMakanan[i].harga
                    << " (" << daftarMakanan[i].restoran << ")\n";
            }
            
            // Tambahkan fungsi pemesanan
            cout << "\n=== Pemesanan ===\n";
            do {
                int pilihMenu;
                cout << "Pilih menu (masukkan nomor): ";
                cin >> pilihMenu;
                
                if (pilihMenu >= 1 && pilihMenu <= jumlahMakanan) {
                    menu.pesanan[menu.jumlahpesanan] = daftarMakanan[pilihMenu - 1].nama;
                    menu.harga[menu.jumlahpesanan] = daftarMakanan[pilihMenu - 1].harga;
                    cout << daftarMakanan[pilihMenu - 1].nama << " ditambahkan ke pesanan.\n";
                    menu.jumlahpesanan++;
                } else {
                    cout << "Pilihan tidak valid.\n";
                }
                
                cout << "Ingin menambah menu lagi? (y/n): ";
                cin >> menu.lagi;
            } while(menu.lagi == 'y' || menu.lagi == 'Y');
            
            // Tampilkan ringkasan pesanan
            tampilkanRingkasanPesanan();
        }
        
        void tampilkanRingkasanPesanan() {
    int total = 0;
    cout << "\n=== Pesanan Anda ===\n";
    for(int i = 0; i < menu.jumlahpesanan; i++){
        cout << i + 1 << ". " << menu.pesanan[i] << " - Rp " << menu.harga[i] << endl;
        total += menu.harga[i];
    }
    cout << "Total harga: Rp " << total << endl;
}

        //total harga berdasarkan bubble sort
        int gettotalharga4() {
    int total = 0;
    for (int i = 0; i < menu.jumlahpesanan; i++) {
        total += menu.harga[i];
    }
    return total;
}

    };



    class Toko{
        private:
        Menutoko menu;
        public:

    void Menupilihan(PesananRating &rating, PesananHarga &harga, PesananJenis &jenis, SortNamaMenu &sortNama) {
    int pilihan;

    do {
        cout<<"=== Menu Pilihan ===\n";
        cout<<"1. Pilih Berdasarkan Toko\n";
        cout<<"2. Cari Berdasarkan Rating (Binary Search)\n";
        cout<<"3. Cari Berdasarkan Harga (Linear Search)\n";
        cout<<"4. Cari Berdasarkan Jenis (Linear Search)\n";
        cout<<"5. Mencari Makanan Berdasarkan Huruf (Bubble Sort)\n";
        cout<<"==================================\n";
        cout<<"Masukan pilihan (1-5): ";
        cin >> pilihan;
    } while(pilihan < 1 || pilihan > 5);

    switch(pilihan) {
        case 1:
            menampilkanmenu(); break;
        case 2:
            rating.cariRestoranByRating(); break;
        case 3:
            harga.cariMakananByHarga(); break;
        case 4:
            jenis.cariMakananByJenis(); break;
        case 5:
            sortNama.urutkanMenuBerdasarkanNama(); break;
        default:
            cout << "Pilihan anda tidak ada!\n";
    }
}




