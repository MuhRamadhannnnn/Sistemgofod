    void tampilkanRingkasanPesanan() {
        int total = 0;
        cout << "\n=== Pesanan Anda ===\n";
        for(int i = 0; i < menu.jumlahpesanan; i++){
            cout << i + 1 << ". " << menu.pesanan[i] << " - Rp " << menu.harga[i] << endl;
            total += menu.harga[i];
        }
        cout << "Total harga: Rp " << total << endl;
    }
    
    int gettotalharga1() {
    int total = 0;
    for (int i = 0; i < menu.jumlahpesanan; i++) {
        total += menu.harga[i];
    }
    return total;
}

